{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es6", "es2017", "dom"]
  },
  "include": ["src/**/*"]
}
